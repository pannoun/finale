{% extends 'base.html.twig' %}

{% block title %}Tache Index{% endblock %}

{% block body %}
    <!-- Page Header Section with Background -->
    <section class="page-title-section overlay" data-background="{{ asset('images/backgrounds/page-title.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <ul class="list-inline custom-breadcrumb">
                        <li class="list-inline-item">
                            <a class="h2 text-primary font-secondary" href="#">Tache Index</a>
                        </li>
                        <li class="list-inline-item text-white h3 font-secondary"></li>
                    </ul>
                    <p class="text-lighten">Here you can view and manage all the tasks in the system.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content Section with Table -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <!-- Task Table Card -->
                    <div class="card shadow-lg border-light rounded-lg">
                        <div class="card-body p-4">
                            <!-- Table Title and Add Task Button -->
                            <div class="d-flex justify-content-between mb-4">
                                <h3 class="text-dark">All Tasks</h3>
                                <a href="{{ path('app_tache_new') }}" class="btn btn-success btn-lg">
                                    <i class="ti-plus"></i> Create New Task
                                </a>
                            </div>

                            <!-- Tasks Table -->
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Creation Date</th>
                                        <th>Due Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for tache in taches %}
                                        <tr>
                                            <td>{{ tache.id }}</td>
                                            <td>{{ tache.titreTache }}</td>
                                            <td>{{ tache.descriptionTache }}</td>
                                            <td>{{ tache.dateCreation ? tache.dateCreation|date('Y-m-d') : '' }}</td>
                                            <td>{{ tache.dateEcheance ? tache.dateEcheance|date('Y-m-d') : '' }}</td>
                                            <td>
                                                <a href="{{ path('app_tache_show', {'id': tache.id}) }}" class="btn btn-primary btn-sm">
                                                    <i class="ti-eye"></i> Show Task
                                                </a>
                                                <a href="{{ path('app_tache_edit', {'id': tache.id}) }}" class="btn btn-warning btn-sm">
                                                    <i class="ti-pencil-alt"></i> Edit Task
                                                </a>
                                                {% if tache.file %}
                                                    <a href="{{ path('app_tache_download', {'id': tache.id}) }}" class="btn btn-info btn-sm">
                                                        <i class="ti-download"></i> Download File
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6" class="text-center">No tasks available</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
