{% extends 'base.html.twig' %}

{% block title %}Comment Details{% endblock %}

{% block body %}
    <!-- Page Title Section with Background -->
    <section class="page-title-section overlay" style="background-image: url('{{ asset('images/backgrounds/page-title.jpg') }}'); height: 300px;">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <ul class="list-inline custom-breadcrumb">
                        <li class="list-inline-item">
                            <a class="h2 text-primary font-secondary" href="#">Comment Details</a>
                        </li>
                        <li class="list-inline-item text-white h3 font-secondary"></li>
                    </ul>
                    <p class="text-lighten">Below are the details for the selected comment.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Comment Details Section -->
    <section class="section-sm">
        <div class="container">
            <div class="row">
                <!-- Comment Content -->
                <div class="col-12 mb-4">
                    <h2 class="section-title">Comment Content</h2>
                    <p class="text-muted">{{ commentaire.contenu }}</p>  <!-- Use 'contenu' here -->
                </div>
            </div>
            <!-- Comment Info -->
            <div class="row align-items-center mb-5">
                <div class="col-lg-9">
                    <ul class="list-inline">
                        <li class="list-inline-item mr-xl-5 mr-4 mb-3 mb-lg-0">
                            <div class="d-flex align-items-center">
                                <i class="ti-calendar text-primary icon-md mr-2"></i>
                                <div class="text-left">
                                    <h6 class="mb-0">Date of Comment</h6>
                                    <p class="mb-0">{{ commentaire.dateCommentaire ? commentaire.dateCommentaire|date('Y-m-d H:i') : '' }}</p>
                                </div>
                            </div>
                        </li>
                        <li class="list-inline-item mr-xl-5 mr-4 mb-3 mb-lg-0">
                            <div class="d-flex align-items-center">
                                <i class="ti-user text-primary icon-md mr-2"></i>
                                <div class="text-left">
                                    <h6 class="mb-0">Author</h6>
                                    <p class="mb-0">{{ commentaire.utilisateur ? commentaire.utilisateur.nom : 'Anonymous' }}</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 text-lg-right text-left">
                    <!-- Back to List Button -->
                    <a href="{{ path('app_commentaire_index') }}" class="btn btn-primary">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
